    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#006699</item>
        <item name="colorPrimaryDark">#006699</item>
        <item name="colorAccent">#006699</item>
    </style>
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#006699</item>
        <item name="android:width">120dp</item>
        <item name="android:textColor">#006699</item>
        <item name="android:textColorPrimary">#006699</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>
